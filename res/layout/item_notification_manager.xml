<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="480px"
    android:layout_height="100px"
    android:background="@drawable/list_item" >

    <TextView
        android:id="@+id/notification_num"
        android:layout_width="50px"
        android:layout_height="40px"
        android:layout_marginTop="10px"
        android:gravity="center"
        android:text="编号"
        android:textColor="@color/black"
        android:textSize="16px" />

    <TextView
        android:id="@+id/notification_title_tview"
        android:layout_width="80px"
        android:layout_height="40px"
        android:layout_marginTop="10px"
        android:layout_toRightOf="@id/notification_num"
        android:gravity="center"
        android:text="通知标题"
        android:textColor="@color/black"
        android:textSize="16px" />

    <TextView
        android:id="@+id/notification_content_tview"
        android:layout_width="80px"
        android:layout_height="40px"
        android:layout_marginTop="10px"
        android:layout_toRightOf="@id/notification_title_tview"
        android:gravity="center"
        android:text="通知内容"
        android:textColor="@color/black"
        android:textSize="16px" />

    <TextView
        android:id="@+id/notification_date_tview"
        android:layout_width="80px"
        android:layout_height="40px"
        android:layout_marginTop="10px"
        android:layout_toRightOf="@id/notification_content_tview"
        android:gravity="center"
        android:text="通知日期"
        android:textColor="@color/black"
        android:textSize="16px" />

    <TextView
        android:id="@+id/notification_catalog_tview"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_marginTop="10px"
        android:layout_toRightOf="@id/notification_date_tview"
        android:gravity="center"
        android:text="类型"
        android:textColor="@color/black"
        android:textSize="16px" />

    <TextView
        android:id="@+id/notification_receiver_tview"
        android:layout_width="70px"
        android:layout_height="40px"
        android:layout_marginTop="10px"
        android:layout_toRightOf="@id/notification_catalog_tview"
        android:gravity="center"
        android:text="收件人"
        android:textColor="@color/black"
        android:textSize="16px" />

    <TextView
        android:id="@+id/notification_sender_tview"
        android:layout_width="80px"
        android:layout_height="40px"
        android:layout_marginTop="10px"
        android:layout_toRightOf="@id/notification_receiver_tview"
        android:gravity="center"
        android:text="发布者"
        android:textColor="@color/black"
        android:textSize="16px" />
     <Button
        android:id="@+id/btn_delete"
        android:layout_width="80px"
        android:layout_height="40px"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/black"
        android:textSize="16px" 
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15px"
        android:background="@drawable/btn_bg_common"
        />
     <Button
        android:id="@+id/btn_preview"
        android:layout_width="80px"
        android:layout_height="40px"
        android:gravity="center"
        android:text="预览"
        android:textColor="@color/black"
        android:textSize="16px" 
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10px"
        android:background="@drawable/btn_bg_common"
        android:layout_toLeftOf="@id/btn_delete"
        android:layout_marginRight="3px"
        />
</RelativeLayout>