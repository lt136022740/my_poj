<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="480px"
    android:layout_height="800px"
    android:background="@android:color/white" >
    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="480px"
        android:layout_height="800px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/register_bg" >
        <TextView
            android:id="@+id/title_tview"
            android:layout_width="120px"
            android:layout_height="40px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20px"
            android:gravity="center"
            android:text="咨询康客"
            android:textColor="@color/ff9900"
            android:textSize="22px" />
        <TextView
            android:id="@+id/chat_content"
            android:layout_width="440px"
            android:layout_height="500px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20px"
            android:gravity="center"
            android:textColor="@color/ff9900"
            android:textSize="22px" 
            android:layout_below="@id/title_tview"
            android:background="@drawable/edit_bg"
            />  
        <EditText
            android:id="@+id/chat_msg"
            android:layout_width="440px"
            android:layout_height="150px"
            android:layout_below="@id/chat_content"
            android:layout_marginTop="10px"
            android:background="@drawable/edit_bg"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="20px"
            android:layout_centerHorizontal="true"
             />
        <Button
            android:id="@+id/btn_send"
            android:layout_width="100px"
            android:layout_height="40px"
            android:layout_below="@id/chat_msg"
            android:background="@drawable/btn_bg_common"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/ff9900"
            android:textSize="20px" 
			android:layout_alignRight="@id/chat_msg"
			android:layout_marginTop="5px"
            />
        <Button
            android:id="@+id/btn_close"
            android:layout_width="100px"
            android:layout_height="40px"
            android:layout_below="@id/chat_msg"
            android:background="@drawable/btn_bg_common"
            android:gravity="center"
            android:text="关闭"
            android:textColor="@color/ff9900"
            android:textSize="20px" 
			android:layout_marginTop="5px"
			android:layout_toLeftOf="@id/btn_send"
			android:layout_marginRight="10px"
            />
        <TextView
            android:id="@+id/status_online"
            android:layout_width="200px"
            android:layout_height="40px"
            android:layout_marginTop="5px"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="22px" 
            android:text="@string/on_line_status"
            android:layout_below="@id/chat_msg"
            android:layout_alignLeft="@id/chat_msg"
            />  
    </RelativeLayout>
</RelativeLayout>