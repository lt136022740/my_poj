<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="100px"
    android:id="@+id/content_item"
    android:background="@drawable/list_item"
    >

    <TextView
        android:id="@+id/tview_item_num"
        android:layout_width="70px"
        android:layout_height="30px"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18px" 
        android:layout_marginTop="10px"
        />

    <TextView
        android:id="@+id/tview_item_name"
        android:layout_width="70px"
        android:layout_height="30px"
        android:layout_toRightOf="@id/tview_item_num"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18px" 
        android:layout_marginTop="10px"
        />

    <TextView
        android:id="@+id/tview_item_gender"
        android:layout_width="50px"
        android:layout_height="30px"
        android:layout_toRightOf="@id/tview_item_name"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18px" 
        android:layout_marginTop="10px"
        />

    <TextView
        android:id="@+id/tview_item_age"
        android:layout_width="60px"
        android:layout_height="30px"
        android:layout_toRightOf="@id/tview_item_gender"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18px"
        android:layout_marginTop="10px"
         />

    <TextView
        android:id="@+id/tview_item_anl_status"
        android:layout_width="80px"
        android:layout_height="30px"
        android:layout_toRightOf="@id/tview_item_age"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18px" 
        android:layout_marginTop="10px"
        />

    <TextView
        android:id="@+id/tview_item_handler_status"
        android:layout_width="80px"
        android:layout_height="30px"
        android:layout_toRightOf="@id/tview_item_anl_status"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18px"
        android:layout_marginTop="10px"
         />

    <TextView
        android:id="@+id/tview_item_signature"
        android:layout_width="80px"
        android:layout_height="30px"
        android:layout_toRightOf="@id/tview_item_handler_status"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18px" 
        android:layout_marginTop="10px"
        />
     <Button
        android:id="@+id/btn_delete"
        android:layout_width="80px"
        android:layout_height="40px"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/black"
        android:textSize="16px" 
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15px"
        android:background="@drawable/btn_bg_common"
        />
     <Button
        android:id="@+id/btn_preview"
        android:layout_width="80px"
        android:layout_height="40px"
        android:gravity="center"
        android:text="预览"
        android:textColor="@color/black"
        android:textSize="16px" 
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10px"
        android:background="@drawable/btn_bg_common"
        android:layout_toLeftOf="@id/btn_delete"
        android:layout_marginRight="3px"
        />
      <Button
        android:id="@+id/btn_property"
        android:layout_width="80px"
        android:layout_height="40px"
        android:gravity="center"
        android:text="属性"
        android:textColor="@color/black"
        android:textSize="16px" 
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10px"
        android:background="@drawable/btn_bg_common"
        android:layout_toLeftOf="@id/btn_preview"
        android:layout_marginRight="3px"
        />
</RelativeLayout>