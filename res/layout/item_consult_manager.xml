<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="480px"
    android:layout_height="100px"
    android:background="@drawable/list_item" >

    <TextView
        android:id="@+id/num"
        android:layout_width="70px"
        android:layout_height="40px"
        android:layout_marginLeft="15px"
        android:gravity="center"
        android:text="编号"
        android:textColor="@color/black"
        android:textSize="16px" 
        android:layout_marginTop="10px"
        />

    <TextView
        android:id="@+id/kk_acount_tview"
        android:layout_width="80px"
        android:layout_height="40px"
        android:layout_toRightOf="@id/num"
        android:gravity="center"
        android:text="康客账号"
        android:textColor="@color/black"
        android:textSize="16px" 
        android:layout_marginTop="10px"  
        />

    <TextView
        android:id="@+id/name_tview"
        android:layout_width="60px"
        android:layout_height="40px"
        android:layout_toRightOf="@id/kk_acount_tview"
        android:gravity="center"
        android:text="姓名"
        android:textColor="@color/black"
        android:textSize="16px" 
        android:layout_marginTop="10px"
        />

    <TextView
        android:id="@+id/content_tview"
        android:layout_width="120px"
        android:layout_height="40px"
        android:layout_toRightOf="@id/name_tview"
        android:gravity="center"
        android:text="内容"
        android:textColor="@color/black"
        android:textSize="16px" 
        android:layout_marginTop="10px"
        />

    <TextView
        android:id="@+id/date_tview"
        android:layout_width="120px"
        android:layout_height="40px"
        android:layout_toRightOf="@id/content_tview"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16px" 
        android:text="2012年"
        android:layout_marginTop="10px"
        />
    <Button
        android:id="@+id/btn_delete"
        android:layout_width="80px"
        android:layout_height="40px"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/black"
        android:textSize="16px" 
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15px"
        android:background="@drawable/btn_bg_common"
        />
     <Button
        android:id="@+id/btn_preview"
        android:layout_width="80px"
        android:layout_height="40px"
        android:gravity="center"
        android:text="预览"
        android:textColor="@color/black"
        android:textSize="16px" 
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10px"
        android:background="@drawable/btn_bg_common"
        android:layout_marginRight="3px"
        android:layout_toLeftOf="@id/btn_delete"
        />
</RelativeLayout>