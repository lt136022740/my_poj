<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="480px"
    android:layout_height="100px"
    android:background="@drawable/list_item"  >
	
    <TextView
        android:id="@+id/complain_num"
        android:layout_width="70px"
        android:layout_height="40px"
        android:layout_marginLeft="15px"
        android:layout_marginTop="10px"
        android:gravity="center"
        android:text="编号"
        android:textColor="@color/black"
        android:textSize="16px" />

    <TextView
        android:id="@+id/complain_kk_acount_tview"
        android:layout_width="80px"
        android:layout_height="40px"
        android:layout_marginTop="10px"
        android:layout_toRightOf="@id/complain_num"
        android:gravity="center"
        android:text="康客"
        android:textColor="@color/black"
        android:textSize="16px" />

    <TextView
        android:id="@+id/complain_name_tview"
        android:layout_width="60px"
        android:layout_height="40px"
        android:layout_marginTop="10px"
        android:layout_toRightOf="@id/complain_kk_acount_tview"
        android:gravity="center"
        android:text="康姓名"
        android:textColor="@color/black"
        android:textSize="16px" />

    <TextView
        android:id="@+id/complain_content_tview"
        android:layout_width="120px"
        android:layout_height="40px"
        android:layout_marginTop="10px"
        android:layout_toRightOf="@id/complain_name_tview"
        android:gravity="center"
        android:text="内容"
        android:textColor="@color/black"
        android:textSize="16px" />

    <TextView
        android:id="@+id/complain_date_tview"
        android:layout_width="120px"
        android:layout_height="40px"
        android:layout_marginTop="10px"
        android:layout_toRightOf="@id/complain_content_tview"
        android:gravity="center"
        android:text="日期"
        android:textColor="@color/black"
        android:textSize="16px" />
    <Button
        android:id="@+id/btn_delete"
        android:layout_width="80px"
        android:layout_height="40px"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/black"
        android:textSize="16px" 
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15px"
        android:background="@drawable/btn_bg_common"
        />
    <Button
        android:id="@+id/btn_preview"
        android:layout_width="80px"
        android:layout_height="40px"
        android:gravity="center"
        android:text="预览"
        android:textColor="@color/black"
        android:textSize="16px" 
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10px"
        android:layout_marginRight="3px"
        android:background="@drawable/btn_bg_common"
        android:layout_toLeftOf="@id/btn_delete"
        />
</RelativeLayout>